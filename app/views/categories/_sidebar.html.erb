<h4>Categories</h4>
<%= link_to "New Category", new_category_path, class: 'btn btn-success' %>
<div class="row">
  <br> 
  <div class="col-md-12">
	  <div class="media">
	    <div class="media-body">
	      <% @categories.each do |category| %>
	        <h5 class="media-heading">
	          <%= link_to category.name, category %>
	        </h5>
	      <% end %>    
	    </div>
	  </div>
  </div>	  
</div>