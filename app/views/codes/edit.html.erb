<h1>New Edit</h1>
 
<div class="row">
  <div class="col-md-4">
    <p>Guidelines for codes</p>
    <ul>
      <li>It's coding time!</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for [@code.tip, @code] do |f| %>

      <div class="form-group">
        <%= f.label :code %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Write code here" %>
      </div>

      <div class="form-group">
        <%= f.label :language %>
        <%= f.collection_select(:language_id, @languages, :id, :name, {:prompt=>false}) %>
      </div> 

      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
