<h3>Platforms</h3>
<%= link_to "New Platform", new_platform_path, class: 'btn btn-success' %>
<div class="row">
  <br>
  <div class="col-md-12">
 <!-- #7 -->
    <% @platforms.each do |platform| %>
      <div class="row">
        <div class="col-md-6">
          <div class="media">
            <div class="media-body">
              <h4 class="media-heading">
 <!-- #8 -->
                <%= platform.name + " " + platform.version %>
              </h4>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="media">
            <div class="media-body">
              <%= link_to "Edit", edit_platform_path(platform), class: 'edit-link' %>&nbsp; <%= link_to "Delete", [platform], method: :delete, class: 'delete-link', data: { confirm: 'Are you sure you want to delete this platform?' } %>
            </div>
          </div>  
        </div>
      </div>
      <div class="row">
      <p>&nbsp;</p>
      </div>  
    <% end %>
  </div>

</div>